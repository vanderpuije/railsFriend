<div id="<%= dom_id friend %>">

<div class="jumbotron">
  <h1 class="display-4"><%= friend.first_name %> <%= friend.last_name %></h1>
  <p class="lead">
    Email: <%= friend.email %> 
    Phone: <%= friend.phone %> 
    Twitter: <%= friend.twitter %>
    Location: <%= friend.location %>
    Hint: <%= friend.hint %>
  </p>

   <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %> |
  <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>  <br/> <br/>
  <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-danger" %>
</div>

 

</div>
